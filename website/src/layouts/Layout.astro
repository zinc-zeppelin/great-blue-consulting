---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="PineAI Consulting - Leveraging AI to transform your business operations" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://unpkg.com/@elevenlabs/convai-widget-embed" async type="text/javascript"></script>
  </head>
  <body>
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span class="text-2xl font-bold text-green-600">PineAI</span>
          </div>
          <div class="flex items-center space-x-4">
            <a href="#services" class="text-gray-700 hover:text-green-600">Services</a>
            <a href="#ai-chat" class="text-gray-700 hover:text-green-600">AI Assistant</a>
            <a href="#contact" class="text-gray-700 hover:text-green-600">Contact</a>
            <a href="#ai-chat" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">Chat Now</a>
          </div>
        </div>
      </div>
    </nav>
    
    <slot />
    
    <footer class="bg-gray-800 text-white py-8 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <p>&copy; 2025 PineAI Consulting. All rights reserved.</p>
          <div class="flex space-x-4">
            <a href="/privacy" class="hover:text-green-400">Privacy Policy</a>
            <a href="/terms" class="hover:text-green-400">Terms of Service</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
</style>